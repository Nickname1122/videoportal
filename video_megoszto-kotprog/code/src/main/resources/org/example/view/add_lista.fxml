        </Label>
        <TextField fx:id="listUsernameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <ChoiceBox fx:id="choicer" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
